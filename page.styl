
body
  margin 0px
  font-family monospace
  background hsl(235,100%,75%)
  padding-bottom 700px

#box
  width 100%
  height 100%
  position absolute

code
  margin 0px 4px
  padding 1px
  letter-spacing 1px
  white-space nowrap
  color white
  font-size 14px
  border-bottom solid 1px hsl(240,90%,87%)

div
  margin 4px 13px
  padding 1px 4px
  border-left solid 1px hsl(240,100%,86%)
  -webkit-border-radius 6px

nav
  display inline-block
  background white
  margin -1px
  width 2px

.inline
  display inline-block
  margin 0px 2px
  padding-bottom 4px
  border solid 1px hsl(240,90%,90%)
  border-width 0px 1px 0px 1px
  -webkit-border-radius 7px
  border solid 1px hsl(240,90%,90%)
  border-width 0px 1px 0px 1px
  -webkit-border-radius 7px

footer
  border solid 1px hsl(60,60%,60%)
  margin 1px
  padding 1px
  display inline-block
  vertical-align top
  -webkit-border-radius 4px

#box>*
  margin 10px
  border 0px;

header
  width 70px
  height 16px
  margin 1px
  padding 1px
  color hsl(240,90%,90%)
  display inline-block
  background white

#result
  font-size 17px
  margin-left 40px
  background hsl(235,100%,75%)