
body
  margin 0px
  font-family monospace
  background hsl(60,18%,97%)

#box
  width 100%
  height 100%
  position absolute

code
  letter-spacing 1px
  padding 2px 4px
  margin 2px 4px
  background hsl(0,90%,93%)
  -webkit-border-radius 4px

div
  margin 10px 19px
  padding 0px 4px
  border-left solid 1px hsl(240,90%,90%)

nav
  display inline-block
  background -webkit-gradient(
    linear, 0 0, 100% 0,
    from(hsla(0,0%,0%,0)),
    color-stop(30%, hsla(0,0%,0%,0)),
    color-stop(50%, hsla(0,80%,60%,0.7)),
    color-stop(70%, hsla(0,0%,0%,0)),
    to(hsla(0,0%,0%,0)))
  margin -6px -3px
  padding 6px 0px

.appear
  background -webkit-gradient(
      linear,0 0, 100% 0,
      from(hsl(30,80%,85%)),
      color-stop(40%,hsl(30,80%,85%)),
      color-stop(50%,hsl(30,80%,93%)),
      color-stop(60%,hsl(30,80%,85%)),
      to(hsl(30,80%,85%)))

.inline_block
  display inline-block
  margin 0px 4px
  padding 4px
  border 1px solid hsl(200,80%,80%)
  -webkit-border-radius 4px

footer
  border solid 1px hsl(60,60%,60%)
  margin 1px
  padding 1px
  display inline-block
  vertical-align top
  -webkit-border-radius 8px

#box>*
  margin 10px

header
  width 70px
  height 16px
  margin 1px
  padding 1px
  color white
  font-size 13px
  background hsl(0,80%,90%)
  display inline-block
  -webkit-border-radius 3px

span
  font-size 10px
  color hsl(20,70%,70%)

#now_level
  border-width 2px 4px

#result
  font-size 17px
  margin-left 40px
  background hsl(240,90%,90%)